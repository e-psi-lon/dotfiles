{
	"$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"console_title_template": "{{ .UserName }}{{ if .HostName }}@{{ .HostName }}{{ end }} : {{ .Path }}",
	"transient_prompt": {
		"template": "<p:white,transparent></><p:blue,p:white>{{ .UserName }}</><p:black,p:white>@</><p:red,p:white>{{ .HostName }}</><p:white,p:blue></><,p:blue>  {{ .Folder }}</><p:blue></>",
		"foreground": "p:black",
		"background": "transparent"
	},
	"secondary_prompt": {
		"template": "<p:white,transparent></><,p:white>></><p:w,transparent></> ",
		"foreground": "p:black",
		"background": "transparent"
	},
	"blocks": [
		{
			"alignment": "left",
			"type": "prompt",
			"segments": [
				{
					"background": "p:bg_white",
					"background_templates": [
						"{{ if eq .Code 0 }}p:bg_white{{ else }}p:bg_red{{ end }}"
					],
					"foreground": "p:blue",
					"leading_diamond": "",
					"style": "diamond",
					"template": "{{ if eq .Code 0 }}{{.Icon}}{{ else }}{{ .Code }}{{ end }}",
					"type": "os",
					"foreground_templates": [
						"{{ if and (eq .Code 0) (eq .Os \"arch\") }}p:blue{{ else if and (eq .Code 0) (eq .Os \"debian\") }}p:dark_red{{ else if and (eq .Code 0) (eq .Os \"fedora\") }}p:blue{{ else if and (eq .Code 0) (eq .Os \"linux\") }}p:black{{ else if and (eq .Code 0) (eq .Os \"macos\") }}p:white{{ else if and (eq .Code 0) (eq .Os \"manjaro\") }}p:green{{ else if and (eq .Code 0) (eq .Os \"opensuse\") }}p:green{{ else if and (eq .Code 0) (eq .Os \"ubuntu\") }}p:red{{ else if and (eq .Code 0) (eq .Os \"windows\") }}p:blue{{ else if and (eq .Code 0) (eq .Os \"android\") }}p:green{{ else }}p:dark_red{{ end }}"
					],
					"properties": {
						"arch": "",
						"debian": "",
						"fedora": "",
						"linux": "",
						"macos": "",
						"manjaro": "",
						"opensuse": "",
						"ubuntu": "",
						"windows": "",
						"android": ""       
					}
				},
				{
					"background": "p:bg_white",
					"foreground": "p:blue",
					"foreground_templates": [
						"{{ if and (eq .Code 0) (eq .Os \"arch\") }}p:blue{{ else if and (eq .Code 0) (eq .Os \"debian\") }}p:dark_red{{ else if and (eq .Code 0) (eq .Os \"fedora\") }}p:blue{{ else if and (eq .Code 0) (eq .Os \"linux\") }}p:black{{ else if and (eq .Code 0) (eq .Os \"macos\") }}p:white{{ else if and (eq .Code 0) (eq .Os \"manjaro\") }}p:green{{ else if and (eq .Code 0) (eq .Os \"opensuse\") }}p:green{{ else if and (eq .Code 0) (eq .Os \"ubuntu\") }}p:red{{ else if and (eq .Code 0) (eq .Os \"windows\") }}p:blue{{ else if and (eq .Code 0) (eq .Os \"android\") }}p:green{{ else }}p:dark_red{{ end }}"
					],
					"powerline_symbol": "",
					"style": "powerline",
					"template": "{{ .UserName }}<p:black>@</><p:red>{{ .HostName }}</> ",
					"type": "session",
					"properties": {
						"display_host": true
					}
				},
				{
					"background": "p:bg_red",
					"foreground": "p:white",
					"powerline_symbol": "",
					"style": "powerline",
					"template": " ⠀",
					"type": "root"
				},
				{
					"background": "p:bg_blue",
					"foreground": "p:white",
					"powerline_symbol": "",
					"properties": {
						"folder_separator_icon": "/",
						"home_icon": "~",
						"max_depth": 2,
						"style": "letter"
					},
					"style": "powerline",
					"template": "  {{ .Path }} ",
					"type": "path"
				},
				{
					"background": "p:bg_yellow",
					"foreground": "p:black",
					"powerline_symbol": "",
					"style": "powerline",
					"type": "git",
					"background_templates": [
						"{{ if or (.Working.Changed) (.Staging.Changed) }}p:bg_orange{{ end }}",
						"{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:bg_turquoise{{ end }}",
						"{{ if gt .Ahead 0 }}p:bg_turquoise{{ end }}",
						"{{ if gt .Behind 0 }}p:bg_turquoise{{ end }}"
					],
					"template": " {{ .HEAD }}{{ if or (.Working.Changed) (.Staging.Changed) }}*{{ end }}{{ if gt .Behind 0 }}⇣{{ end }}{{ if gt .Ahead 0 }}⇡{{ end }} ",
					"properties": {
						"fetch_stash_count": true,
						"fetch_status": true,
						"fetch_upstream_icon": true
					}
				}
			]
		}, 
		{
			"type": "rprompt",
			"segments": [
			  {
				"properties": {
				  "display_mode": "files",
				  "fetch_package_manager": false,
				  "home_enabled": false
				},
				"template": "\ue718 ",
				"foreground": "p:green",
				"background": "transparent",
				"type": "node",
				"style": "plain"
			  },
			  {
				"properties": {
				  "fetch_version": false
				},
				"template": "\ue626 ",
				"foreground": "p:blue",
				"background": "transparent",
				"type": "go",
				"style": "plain"
			  },
			  {
				"properties": {
				  "display_mode": "files",
				  "fetch_version": false,
				  "fetch_virtual_env": false
				},
				"template": "\ue235 ",
				"foreground": "p:yellow",
				"background": "transparent",
				"type": "python",
				"style": "plain"
			  },
			  {
				"template": "in <p:blue><b>{{ .Name }}</b></> ",
				"foreground": "p:white",
				"background": "transparent",
				"type": "shell",
				"style": "plain"
			  },
			  {
				"template": "at <p:blue><b>{{ .CurrentDate | date \"15:04:05\" }}</b></>",
				"foreground": "p:white",
				"background": "transparent",
				"type": "time",
				"style": "plain"
			  }
			]
		  }
	],
	"palette": {
		"black": "#000000",
		"blue": "#0077c2",
		"dark_red": "#632020",
		"red": "#e06c75",
		"yellow": "#fffb38",
		"white": "#ffffff",
		"green": "#50a14f",
		
		"bg_blue": "#0077c2",
		"bg_orange": "#ff9248",
		"bg_red": "#cc2222",
		"bg_turquoise": "#30d5c8",
		"bg_white": "#fbfbfb",
		"bg_yellow": "#fffb38"
	},
	"version": 3,
	"final_space": true
}