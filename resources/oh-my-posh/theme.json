{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "console_title_template": "{{ .UserName }}{{ if .HostName }}@{{ .HostName }}{{ end }} : {{ .Path }}",
    "transient_prompt": {
        "template": "<p:white,transparent></><p:blue,p:white>{{ .UserName }}</><p:black,p:white>@</><p:red,p:white>{{ .HostName }}</><p:white,p:blue></><p:white,p:blue>  {{ .Folder }}</><p:blue></>",
        "foreground": "p:black",
        "background": "transparent"
    },
    "secondary_prompt": {
        "template": "<p:white,transparent></><,p:white>> </><p:white,transparent></> ",
        "foreground": "p:black",
        "background": "transparent"
    },
    "blocks": [
        {
            "alignment": "left",
            "type": "prompt",
            "segments": [
                {
                    "background": "p:bg_white",
                    "background_templates": [
                        "{{ if eq .Code 0 }}p:bg_white{{ else }}p:bg_red{{ end }}"
                    ],
                    "foreground": "p:blue",
                    "leading_diamond": "",
                    "style": "diamond",
                    "template": "{{ if eq .Code 0 }}{{.Icon}}{{ else }}{{ .Code }}{{ end }} ",
                    "type": "os",
                    "foreground_templates": [
                        "{{ if and (eq .Code 0) (eq .Os \"debian\") }}p:brand_debian{{ else if and (eq .Code 0) (eq .Os \"mint\") }}p:brand_mint{{ else if and (eq .Code 0) (eq .Os \"windows\") }}p:brand_windows{{ else if and (eq .Code 0) (eq .Os \"android\") }}p:brand_android{{ else if and (eq .Code 0) (eq .Os \"nixos\") }}p:brand_nixos{{ else }}p:black{{ end }} "
                    ],
                    "options": {
                        "debian": "",
                        "linux": "",
                        "mint": "󰣭",
                        "windows": "",
                        "android": "",
                        "nixos": ""
                    }
                },
                {
                    "background": "p:bg_white",
                    "foreground": "p:blue",
                    "foreground_templates": [
                        "{{ if and (eq .Code 0) (eq .Os \"debian\") }}p:brand_debian{{ else if and (eq .Code 0) (eq .Os \"mint\") }}p:brand_mint{{ else if and (eq .Code 0) (eq .Os \"windows\") }}p:brand_windows{{ else if and (eq .Code 0) (eq .Os \"android\") }}p:brand_android{{ else if and (eq .Code 0) (eq .Os \"nixos\") }}p:brand_nixos{{ else }}p:black{{ end }}"
                    ],
                    "powerline_symbol": "",
                    "style": "powerline",
                    "template": "{{ .UserName }}<p:black>@</><p:red>{{ .HostName }}</> ",
                    "type": "session",
                    "options": {
                        "display_host": true
                    }
                },
                {
                    "background": "p:bg_red",
                    "foreground": "p:white",
                    "powerline_symbol": "",
                    "style": "powerline",
                    "template": " ⠀",
                    "type": "root"
                },
                {
                    "background": "p:bg_blue",
                    "foreground": "p:white",
                    "powerline_symbol": "",
                    "options": {
                        "folder_separator_icon": "/",
                        "home_icon": "~",
                        "max_depth": 2
                    },
                    "properties": {
                        "style": "letter"
                    },
                    "style": "powerline",
                    "template": "  {{ .Path }} ",
                    "type": "path"
                },
                {
                    "background": "p:bg_yellow",
                    "foreground": "p:black",
                    "powerline_symbol": "",
                    "style": "powerline",
                    "type": "git",
                    "background_templates": [
                            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:bg_orange{{ end }}",
                            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:bg_turquoise{{ end }}",
                            "{{ if gt .Ahead 0 }}p:bg_turquoise{{ end }}",
                            "{{ if gt .Behind 0 }}p:bg_turquoise{{ end }}"
                    ],
                    "template": " {{ .HEAD }}{{ if or (.Working.Changed) (.Staging.Changed) }}*{{ end }}{{ if gt .Behind 0 }}⇣{{ end }}{{ if gt .Ahead 0 }}⇡{{ end }} ",
                    "properties": {
                        "fetch_status": true,
                        "fetch_upstream_icon": true,
                        "fetch_push_status": true,
                        "fetch_stash_count": true
                    }
                }
            ]
        }, 
        {
            "type": "rprompt",
            "segments": [
                {
                    "options": {
                        "display_mode": "files",
                        "fetch_package_manager": false,
                        "home_enabled": false
                    },
                    "template": "\ue718 ",
                    "foreground": "p:brand_node",
                    "background": "transparent",
                    "type": "node",
                    "style": "plain"
                },
                {
                    "options": {
                        "display_mode": "files",
                        "fetch_version": false,
                        "fetch_virtual_env": true
                    },
                    "template": "\ue235 ",
                    "foreground": "p:brand_python",
                    "background": "transparent",
                    "type": "python",
                    "style": "plain"
                },
                {
                    "options": {
                        "display_mode": "files",
                        "fetch_version": false
                    },
                    "template": "\ue916 ",
                    "foreground": "p:brand_kotlin",
                    "background": "transparent",
                    "type": "kotlin",
                    "style": "plain"
                },
                {
                    "template": "in <p:blue><b>{{ .Name }}</b></> ",
                    "foreground": "p:white",
                    "background": "transparent",
                    "type": "shell",
                    "style": "plain"
                },
                {
                    "template": "at <p:blue><b>{{ .CurrentDate | date \"15:04:05\" }}</b></>",
                    "foreground": "p:white",
                    "background": "transparent",
                    "type": "time",
                    "style": "plain"
                }
            ]
        }
    ],
    "palette": {
        "black": "#000000",
        "blue": "#0077c2",
        "red": "#e06c75",
        "yellow": "#fffb38",
        "white": "#ffffff",
        "green": "#50a14f",

        "bg_blue": "#0078c2",
        "bg_orange": "#ff9248",
        "bg_red": "#cc2222",
        "bg_turquoise": "#30d5c8",
        "bg_white": "#fbfbfb",
        "bg_yellow": "#fffb38",

        "brand_debian": "#A80030",
        "brand_mint": "#87CF3F",
        "brand_nixos": "#5277C3",
        "brand_windows": "#0078D4",
        "brand_android": "#3DDC84",
        "brand_node": "#339933",
        "brand_python": "#3776AB",
        "brand_kotlin": "#8053ff"
    },
    "version": 3,
    "final_space": true
}